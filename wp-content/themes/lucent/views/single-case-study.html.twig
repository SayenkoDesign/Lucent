{% extends 'basic.html.twig' %}
{% block header %}
    {% include "layout/menu.html.twig" %}
    {{ parent() }}
        <section class="case-studies-header {% if SP.ACF.get_field('logo') %}has-logo{% endif %} text-center">
            <div class="row">
                <div class="small-12 columns">
                    {% if SP.ACF.get_field('logo') %}
                        <div class="logo">
                            <img src="{{ SP.ACF.get_field('logo').sizes.case_logo }}" alt="{{ SP.ACF.get_field('logo').title }}">
                        </div>
                    {% endif %}

                    <div class="links">
                        {{ previous }}
                        {% if previous and next %}<span class="text-accent">|</span>{% endif %}
                        {{ next }}
                    </div>
                </div>
            </div>
        </section>
{% endblock %}